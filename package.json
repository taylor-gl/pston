{
  "name": "pston",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "npm run build:images && vite build",
    "build:images": "node scripts/build-images.js",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "prepare": "husky",
    "type-check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "type-check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "validate": "npm run type-check && npm run test:run",
    "fix": "npm run format && npm run lint:fix",
    "upload-seed-images": "node scripts/upload-seed-images.js",
    "db:reset-local": "npx supabase db reset --local && npm run upload-seed-images",
    "db:reset-prod": "npx supabase db reset --linked --no-seed",
    "db:backup-prod": "node scripts/backup-production.js",
    "db:restore-prod": "node scripts/restore-production.js",
    "make-admin-local": "node scripts/make-admin.js"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.18.0",
    "@iconify/svelte": "^5.0.0",
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/adapter-vercel": "^5.7.2",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@testing-library/svelte": "^5.2.6",
    "@types/node": "^24.0.4",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-svelte": "^3.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "sharp": "^0.33.5",
    "supabase": "^2.26.9",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.2.6",
    "vite-plugin-devtools-json": "^0.2.0",
    "vitest": "^2.1.6"
  },
  "dependencies": {
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.50.1",
    "dotenv": "^17.2.0",
    "modern-normalize": "^3.0.1",
    "svelte-easy-crop": "^4.0.1"
  },
  "lint-staged": {
    "*.{js,ts,svelte}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  }
}
